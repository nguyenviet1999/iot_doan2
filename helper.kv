<Hello>:
    name: 'hello'
    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        left_action_items: [["account-arrow-left", lambda x: nav_drawer.toggle_nav_drawer()]]
                        title: "Hoang Viet's Smart Home"
                        md_bg_color: .2, .2, .2, 1
                        specific_text_color: 1, 1, 1, 1
                    MDBottomNavigation:
                        MDBottomNavigationItem:
                            name: 'screen 1'
                            text: 'Living Room'
                            icon: 'home'
                            Image:
                                size_hint: 1,1
                                pos_hint: {'center_x': .5, 'center_y': .8}
                                source: 'living.jpg'
                            MDCard:
                                orientation: 'vertical'
                                pos_hint: {'center_x': .25, 'center_y': .35}
                                size_hint: .2,.2
                                pos: 70,100
                                elevation: 10
                                Image:
                                    size: '100dp', '100dp'
                                    source: 'temp1.png'
                                    halign: 'center'
                                MDLabel:
                                    id: label_temp
                                    text: "30"
                                    halign: 'center'
                                    pos_hint: {'center_x': .5, 'center_y':.4}
                                    font_size: '25sp'
                                    theme_text_color: 'Custom'
                                    text_color: 215/255, 66/255, 66/255,1
                            MDCard:
                                orientation: 'vertical'
                                pos_hint: {'center_x': .25, 'center_y': .12}
                                size_hint: .2,.2
                                pos: 230,100
                                elevation: 10
                                Image:
                                    size: '100dp', '100dp'
                                    source: 'humidity.png'
                                    halign: 'center'
                           
                                MDLabel:
                                    id: label_hum
                                    text: "85"
                                    halign: 'center'
                                    pos_hint: {'center_x': .5, 'center_y':.4}
                                    font_size: '25sp'
                                    theme_text_color: 'Custom'
                                    text_color: 145/255, 222/255, 245/255,1
                            MDCard:
                                orientation: 'horizontal'
                                pos_hint: {'center_x': .72, 'center_y': .35}
                                size_hint: .32,.15
                                pos: 100,100
                                elevation: 10
                                
                                MDSwitch:
                                    id: switch_light
                                    width: dp(40)
                                    on_active: root.event_button_light(*args)
                                    active: False
                                    pos_hint: {'center_x':.9,'center_y': .5}
                                Image:
                                    size_hint: .7,.7
                                    source: 'lamp.png'
                                    pos_hint: {'center_x': .4, 'center_y':.5}
                            MDCard:
                                orientation: 'horizontal'
                                pos_hint: {'center_x': .72, 'center_y': .125}
